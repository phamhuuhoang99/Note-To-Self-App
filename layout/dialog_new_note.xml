<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="32dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:padding="10dp"
    >
    <EditText
        android:id="@+id/ed_Title"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:hint="@string/title_hint"
        />
    <EditText
        android:id="@+id/ed_description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/description_hint"
        android:layout_below="@id/ed_Title"
        android:layout_marginTop="20dp"
        />
    <CheckBox
        android:id="@+id/cbIdea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idea_checkbox"
        android:layout_below="@id/ed_description"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@id/ed_description"
        />
    <CheckBox
        android:id="@+id/cb_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todo_checkbox"
        android:layout_below="@id/cbIdea"
        android:layout_marginTop="50dp"
        />
    <CheckBox
        android:id="@+id/cb_important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/important_checkbox"
        android:layout_below="@id/cb_todo"
        android:layout_marginTop="50dp"
        />
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_important"
        android:text="@string/cancel_button"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_important"


        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"

        android:layout_alignBottom="@id/btn_cancel"
        android:text="@string/ok_button" />



</RelativeLayout>