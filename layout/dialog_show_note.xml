<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_marginBottom="100dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="40dp"
        android:id="@+id/imageViewImportant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_warning_black_24dp" />

    <ImageView
        android:id="@+id/imageViewTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_check_box_outline_blank_black_24dp"
        android:layout_toRightOf="@id/imageViewImportant"
        android:layout_alignBottom="@id/imageViewImportant"
        />

    <ImageView
        android:id="@+id/imageViewIdea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_wb_incandescent_black_24dp"
        android:layout_toRightOf="@id/imageViewTodo"
        android:layout_alignBottom="@id/imageViewImportant"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewTodo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"



        android:text="@string/large_text"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_below="@id/txtTitle"
        />

</RelativeLayout>